#game-fild {
  background-color cadetblue
  width 100%
  height 400px
}

.dropzone-box {
  background-color cadetblue
  margin-top 50px
  display: flex;
  align-items: center;
}
.audio-nodes {
  display: flex;
  justify-content: space-around;
}

.dropzone {
  width: 300px;
  height: 200px;
  margin 5px;

  display inline-block
  background-color: mediumpurple;
  border: dashed 4px transparent;
  border-radius: 4px;
  padding: 10px;
  transition: background-color 0.3s;
}

.drop-active {
  border-color: #aaa;
}

.drop-target {
  background-color: #29e;
  border-color: #fff;
  border-style: solid;
}

.drag-drop {
  width 60px
  height 60px
  display: inline-block;

  color: #fff;
  background-color: #29e;
  border: solid 2px #fff;

  -webkit-transform: translate(0px, 0px);
  transform: translate(0px, 0px);

  transition: background-color 0.3s;
}

.drag-drop.can-drop {
  color: #000;
  background-color: #4e4;
}